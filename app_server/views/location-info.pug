extends layout
include _includes/sharedHTMLfunctions
block content
    .row.banner
        .col-12
        h1= pageheader.title
    .row
        .col-12.col-lg-9
            .row
                .col-12.col-md-6
                    p.rating
                        +outputRating(rating)
                    p= address
                    .card.card-primary
                        .card-block
                        h2.card-title Opening hours
                        each day in days
                            p.card-text= day
                            
                    .card.card-primary
                        .card-block
                            h2.card-title Facilities
                            each facility in facilities
                                span.badge.badge-warning
                                    i.fa.fa-check= facility 
                                small &nbsp;    
                .col-12.col-md-6.location-map
                    .card.card-primary
                        .card-block
                            h2.card-title Location map
                            img.img-fluid.rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=51.455041,-0.9690884&zoom=17&size=400x350&sensor=false&markers=51.455041,-0.9690884&scale=2&key=AIzaSyDUVqTq1F91F9hF710fAIIaZzahZ27uUlQ')
            .row
                .col-12
                    .card.card-primary.review-card
                        .card-block
                            a.btn.btn-primary.float-right(href='/location/review/new') Add review
                            h2.card-title Customer reviews
                            .row.review
                                .col-12.no-gutters.review-header
                                    span.rating
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.far.fa-star
                                        i.far.fa-star
                                    span.review Author Simon Holmes
                                    small.review Timestamp 16 February 2017
                                .col-12
                                    p What a great place.
                            .row.review
                                .col-12.no-gutters.review-header
                                    span.rating
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.far.fa-star
                                        i.far.fa-star
                                    span.reviewAuthor Charlie Chaplin
                                    small.reviewTimestamp 14 February 2017
                                .col-12
                                p It was okay. Coffee wasn't great.
        .col-12.col-lg-3
            p.lead= sidebartop
            
            p= sidebarbottom
            